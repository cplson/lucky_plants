// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String
  lastName  String
  email     String  @unique
  password  String

  cart Cart?
}

model Cart {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shopperId String  @unique
  shopper   User   @relation(fields: [shopperId], references: [id])

  quantity_0 Int @default(0)
  quantity_1 Int @default(0)
  quantity_2 Int @default(0)
  quantity_3 Int @default(0)
  quantity_4 Int @default(0)
  quantity_5 Int @default(0)
  quantity_6 Int @default(0)
  quantity_7 Int @default(0)
  quantity_8 Int @default(0)
  quantity_9 Int @default(0)
  quantity_10 Int @default(0)
  quantity_11 Int @default(0)
}

model Product {
  id String @id @default(uuid())
  name String @unique
  price Float
  stock Int
  url String
}