// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName String
  lastName  String
  email     String @unique
  password  String

  cart Cart?
}

model Cart {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shopperId String @unique
  shopper   User   @relation(fields: [shopperId], references: [id])

  items CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  price Float

  productId String?
  product   Product? @relation(fields: [name], references: [name])

  Cart   Cart   @relation(fields: [cartId], references: [id])
  cartId String
}

model Product {
  id       String     @id @default(uuid())
  name     String     @unique
  price    Float
  stock    Int
  url      String
  CartItem CartItem[]
}
